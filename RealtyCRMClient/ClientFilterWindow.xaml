<Window x:Class="RealtyCRMClient.ClientFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фильтр клиентов" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Имя -->
            <TextBlock Text="Имя:" FontWeight="Bold"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон:" FontWeight="Bold"/>
            <TextBox x:Name="NumberBox" Margin="0,0,0,10"/>

            <TextBlock Text="Статус:" FontWeight="Bold"/>
            <ComboBox x:Name="StatusComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Все" Tag="-1"/>
                <ComboBoxItem Content="Очередь" Tag="0"/>
                <ComboBoxItem Content="В работе" Tag="1"/>
                <ComboBoxItem Content="Ожидание ответа" Tag="2"/>
                <ComboBoxItem Content="Готово" Tag="3"/>
            </ComboBox>

            <!-- Кнопка Применить -->
            <Button Content="Применить фильтр" 
                    Click="ApplyFilter_Click" 
                    Width="120" Height="40"/>
        </StackPanel>
    </Grid>
</Window>