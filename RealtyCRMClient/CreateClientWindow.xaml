<Window x:Class="RealtyCRMClient.CreateClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать клиента" Height="500" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <!-- Имя -->
            <TextBlock Text="Имя:" FontWeight="Bold"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон:" FontWeight="Bold"/>
            <TextBox x:Name="NumberBox" Margin="0,0,0,10"/>

            <!-- Статус -->
            <TextBlock Text="Статус:" FontWeight="Bold"/>
            <ComboBox x:Name="StatusComboBox" 
                      ItemsSource="{Binding StatusOptions}" 
                      SelectedValue="{Binding SelectedStatus}" 
                      DisplayMemberPath="Value"
                      SelectedValuePath="Key"
                      Margin="0,0,0,10"/>

            <!-- Описание -->
            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <TextBox x:Name="DescriptionBox" AcceptsReturn="True" TextWrapping="Wrap" Height="100" Margin="0,0,0,10"/>

            <!-- Кнопка сохранить -->
            <Button Content="Сохранить" 
                    Click="SaveButton_Click" 
                    Width="100" Height="40"/>
        </StackPanel>
    </Grid>
</Window>