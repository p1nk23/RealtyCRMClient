<Window x:Class="RealtyCRMClient.CreateTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать задачу" Height="500" Width="600">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Заголовок:" FontWeight="Bold"/>
                <TextBox x:Name="TitleBox" Margin="0,0,0,10"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" FontWeight="Bold"/>
                <TextBox x:Name="DescriptionBox" AcceptsReturn="True" TextWrapping="Wrap" Height="100" Margin="0,0,0,10"/>

                <!-- Статус -->
                <TextBlock Text="Статус:" FontWeight="Bold"/>
                <ComboBox x:Name="StatusComboBox" Margin="0,0,0,10">
                    <ComboBoxItem Content="Очередь" Tag="0"/>
                    <ComboBoxItem Content="В работе" Tag="1"/>
                    <ComboBoxItem Content="Ожидание ответа" Tag="2"/>
                    <ComboBoxItem Content="Готово" Tag="3"/>
                </ComboBox>

                <!-- Дата начала -->
                <TextBlock Text="Дата начала:" FontWeight="Bold"/>
                <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10"/>

                <!-- Дата окончания -->
                <TextBlock Text="Дата окончания:" FontWeight="Bold"/>
                <DatePicker x:Name="EndDatePicker" Margin="0,0,0,10"/>

                <!-- Персонал -->
                <TextBlock Text="Назначено персоналу:" FontWeight="Bold"/>
                <ComboBox x:Name="AssignedToComboBox" 
          ItemsSource="{Binding Personals}" 
          DisplayMemberPath="Name" 
          SelectedValuePath="Id"
          SelectedItem="{Binding SelectedPersonal}"
          Margin="0,0,0,10"/>

                <!-- Кнопка сохранения -->
                <Button Content="Создать задачу" 
                        Click="SaveButton_Click" 
                        Width="120" Height="40"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>