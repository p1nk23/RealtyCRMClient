<Window x:Class="RealtyCRMClient.DocumentsTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Шаблоны документов" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Выбор шаблона -->
        <ComboBox ItemsSource="{Binding Templates}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedTemplate}"
                  Grid.Row="0"
                  Margin="0,0,0,10"/>

        <!-- Поиск клиентов -->
        <TextBox Text="{Binding ClientSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="1"
                 Margin="0,0,0,10"/>

        <!-- Список найденных клиентов -->
        <ListBox ItemsSource="{Binding FilteredClients}"
                 DisplayMemberPath="Name"
                 SelectedItem="{Binding SelectedClientForRole}"
                 Grid.Row="2"
                 Margin="0,0,0,10"/>

        <!-- Выбор ролей -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10">
            <Button Content="Выбрать как Покупателя" Command="{Binding SelectBuyerCommand}" Margin="0,0,10,0"/>
            <Button Content="Выбрать как Продавца" Command="{Binding SelectSellerCommand}"/>
        </StackPanel>

        <!-- Индикация выбранных клиентов -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Покупатель:" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedBuyer.Name}" Margin="0,5,0,10"/>

            <TextBlock Text="Продавец:" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedSeller.Name}" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Чекбоксы условий -->
        <StackPanel Grid.Row="5" Margin="0,10,0,10">
            <TextBlock Text="Дополнительные условия:" FontWeight="Bold"/>

            <CheckBox IsChecked="{Binding IsMarriedSeller}" Content="Продавец состоит в браке" Margin="0,5,0,0"/>
            <CheckBox IsChecked="{Binding IsMarriedBuyer}" Content="Покупатель состоит в браке" Margin="0,5,0,0"/>
            <CheckBox IsChecked="{Binding NotarizedConsentProvided}" Content="Есть нотариальное согласие супруга" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Кнопка генерации -->
        <Button Content="Сформировать PDF" 
                Command="{Binding GeneratePdfCommand}" 
                Grid.Row="5"
                HorizontalAlignment="Right"
                Width="150"/>
    </Grid>
</Window>