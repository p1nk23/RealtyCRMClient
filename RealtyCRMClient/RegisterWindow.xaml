<Window x:Class="RealtyCRMClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="500">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Имя -->
                <TextBlock Text="Имя:" FontWeight="Bold"/>
                <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

                <!-- Логин -->
                <TextBlock Text="Логин:" FontWeight="Bold"/>
                <TextBox x:Name="LoginBox" Margin="0,0,0,10"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль:" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

                <!-- Email -->
                <TextBlock Text="Email:" FontWeight="Bold"/>
                <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>

                <!-- Телефон -->
                <TextBlock Text="Телефон:" FontWeight="Bold"/>
                <TextBox x:Name="PhoneBox" Margin="0,0,0,10"/>

                <!-- Роль -->
                <TextBlock Text="Роль (1 - Менеджер, 2 - Админ):" FontWeight="Bold"/>
                <TextBox x:Name="RoleBox" Margin="0,0,0,10"/>

                <!-- Кнопка регистрации -->
                <Button Content="Зарегистрироваться" 
                        Click="RegisterButton_Click" 
                        Width="120" Height="40" HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>