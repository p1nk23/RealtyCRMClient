<Window x:Class="RealtyCRMClient.EditContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать договор" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Клиент -->
        <TextBlock Text="Клиент:" Grid.Row="0"/>
        <ComboBox ItemsSource="{Binding Clients}" 
                  SelectedItem="{Binding SelectedClient}"
                  DisplayMemberPath="Name"
                  Grid.Row="1"/>

        <!-- Агент -->
        <TextBlock Text="Агент:" Grid.Row="2"/>
        <ComboBox ItemsSource="{Binding Agents}" 
                  SelectedItem="{Binding SelectedAgent}"
                  DisplayMemberPath="Name"
                  Grid.Row="3"/>

        <!-- Объект недвижимости -->
        <TextBlock Text="Объект недвижимости:" Grid.Row="4"/>
        <ComboBox ItemsSource="{Binding RealEstateObjects}" 
                  SelectedItem="{Binding SelectedRealEstate}"
                  DisplayMemberPath="Address"
                  Grid.Row="5"/>

        <!-- Дата начала -->
        <TextBlock Text="Дата начала:" Grid.Row="6"/>
        <DatePicker SelectedDate="{Binding StartDate}" Grid.Row="7"/>

        <!-- Дата окончания -->
        <TextBlock Text="Дата окончания:" Grid.Row="8"/>
        <DatePicker SelectedDate="{Binding EndDate}" Grid.Row="9"/>

        <!-- Статус -->
        <TextBlock Text="Статус:" Grid.Row="10"/>
        <TextBox Text="{Binding Status}" Grid.Row="11"/>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Grid.Row="12" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="0,0,5,0"/>
            <Button Content="Закрыть" Click="CloseButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>