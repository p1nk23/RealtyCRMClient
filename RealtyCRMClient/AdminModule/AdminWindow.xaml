<Window x:Class="RealtyCRMClient.AdminModule.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RealtyCRMClient.AdminModule"
        Title="Панель администратора" Height="600" Width="800">
    <Window.Resources>
        <!-- Конвертер для проверки числового ввода -->
        <local:LongConverter x:Key="LongConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Выбор типа сущности -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Выберите тип сущности:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding EntityItems}" 
                      SelectedItem="{Binding SelectedEntity}" 
                      DisplayMemberPath="DisplayName" 
                      Width="200"/>
        </StackPanel>

        <!-- Список записей -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Entities}" 
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding DisplayText}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Удаление записи -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ID для удаления:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding DeleteId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource LongConverter}}" 
                     Width="100" PreviewTextInput="NumberValidationTextBox"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="10,0,0,0" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- Статус операции -->
        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Foreground="Blue"/>
    </Grid>
</Window>